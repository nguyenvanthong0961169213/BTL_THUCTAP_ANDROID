<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="LoginViewModel"
            type="com.example.bt_android_thuctap.viewmodel.LoginViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/img_usercontainer"
            android:layout_width="60dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user" />

        <LinearLayout
            android:layout_width="352dp"
            android:layout_height="50dp"
            android:layout_marginStart="1dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toEndOf="@+id/img_usercontainer"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtNameUserContainer"

                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Name" />

            <TextView

                android:id="@+id/txtChatUserContainer"

                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="Chat" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>